{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "include": ["**/*.mjs", "**/*.cjs", "**/*.js", "**/*.ts"],
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "NodeNext",
    "target": "es2021",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  }
}
