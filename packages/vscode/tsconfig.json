{
  "extends": "../tsconfig.base.json",
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "isolatedModules": true
  }
}
