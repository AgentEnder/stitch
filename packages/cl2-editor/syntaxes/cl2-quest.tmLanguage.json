{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Crashlands2 Quest",
  "scopeName": "source.bscotch-cl2-quest",
  "fileTypes": ["cl2_quest"],
  "patterns": [
    {
      "include": "#general"
    }
  ],
  "repository": {
    "general": {
      "patterns": [
        {
          "name": "dialog.speaker.bscotch-cl2-quest",
          "match": "^\\t(?<name>.*?)\\s+(?<moteId>@[a-z_0-9]+)",
          "captures": {
            "1": {
              "name": "dialog.speaker.name.bscotch-cl2-quest"
            },
            "2": {
              "name": "id.mote.bscotch-cl2-quest"
            }
          }
        },
        {
          "name": "key-value.bscotch-cl2-quest",
          "match": "^(?<type>[a-zA-Z0-9 ]+):\\s*(?<value>.*?(?<moteId>@[a-z_0-9]+)?)?$",
          "captures": {
            "1": {
              "name": "key.bscotch-cl2-quest"
            },
            "2": {
              "name": "value.bscotch-cl2-quest"
            },
            "3": {
              "name": "id.mote.bscotch-cl2-quest"
            }
          }
        },
        {
          "name": "id.mote.bscotch-cl2-quest",
          "match": "(?<moteId>@[a-z_0-9]+)"
        },
        {
          "name": "id.array.bscotch-cl2-quest",
          "match": "(?<arrayId>#[a-z_0-9]+)"
        },
        {
          "name": "name.emoji.bscotch-cl2-quest",
          "match": "(?<emojiName>\\([a-zA-Z_0-9 ]+\\))"
        }
      ]
    }
  }
}
