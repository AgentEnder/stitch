{
  "name": "@bscotch/stitch",
  "version": "0.9.0",
  "description": "Stitch: The Gamemaker Studio 2 Asset Pipeline Development Kit.",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "./build/index.js",
  "files": [
    "build/cli/**/*",
    "build/lib/**/*",
    "build/index.*",
    "build/types/**/*"
  ],
  "bin": {
    "stitch": "./build/cli/stitch.js"
  },
  "scripts": {
    "test": "mocha --inspect --require source-map-support/register --bail ./build/test/index.js",
    "build": "rm -rf build && npx tsc",
    "preversion": "git checkout develop && npm run build && npm test",
    "version": "npx conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add -A",
    "postversion": "git push origin develop && git checkout master && git merge develop && git push origin master --follow-tags && npm publish && git checkout develop",
    "tsc-live": "npx tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bscotch/stitch.git"
  },
  "keywords": [
    "gamemaker",
    "yyp",
    "gms2",
    "gms",
    "yy",
    "gml"
  ],
  "author": "Adam Coster (https://www.bscotch.net/about)",
  "contributors": [
    "Shi Chen (https://www.bscotch.net/about)"
  ],
  "license": "MIT",
  "homepage": "https://github.com/bscotch/gms2",
  "dependencies": {
    "@bscotch/spritely": "^0.6.0",
    "@bscotch/utility": "^0.5.0",
    "chalk": "^4.1.0",
    "change-case": "^4.1.1",
    "commander": "^6.1.0",
    "fs-extra": "^9.0.1",
    "json-bigint": "^1.0.0",
    "lodash": "^4.17.20",
    "sort-keys": "^4.0.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@types/sharp": "^0.26.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^7.10.0",
    "mocha": "^8.1.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
