{
  "name": "@bscotch/stitch",
  "version": "2.8.0",
  "description": "Stitch: The GameMaker Studio 2 Asset Pipeline Development Kit.",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "./build/index.js",
  "files": [
    "build/cli/**/*",
    "build/lib/**/*",
    "build/index.*",
    "build/types/**/*",
    "assets/**/*"
  ],
  "bin": {
    "stitch": "build/cli/stitch.js"
  },
  "scripts": {
    "test": "npm run build && mocha --inspect --require source-map-support/register --bail ./build/test/index.js",
    "build": "rm -rf build && npx tsc",
    "preversion": "git checkout develop && npm test",
    "version": "npx conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && prettier src/ -w && git add -A",
    "postversion": "git push origin develop && git checkout master && git merge develop && git push origin master --follow-tags && npm publish && git checkout develop",
    "tsc-live": "npx tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bscotch/stitch.git"
  },
  "keywords": [
    "gamemaker",
    "yyp",
    "gms2",
    "gms",
    "yy",
    "gml",
    "pipeline"
  ],
  "author": "Adam Coster (https://www.bscotch.net/about#adam-coster)",
  "contributors": [
    "Shi Chen (https://www.bscotch.net/about#shi-chen)"
  ],
  "license": "MIT",
  "homepage": "https://github.com/bscotch/stitch",
  "dependencies": {
    "@bscotch/spritely": "^1.6.11",
    "@bscotch/utility": "^1.1.1",
    "chalk": "^4.1.1",
    "change-case": "^4.1.2",
    "commander": "^7.2.0",
    "fs-extra": "^10.0.0",
    "json-bigint": "^1.0.0",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.19",
    "unzipper": "^0.10.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/fs-extra": "^9.0.11",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.43",
    "@types/object-path": "^0.11.0",
    "@types/unzipper": "^0.10.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "chai": "^4.3.4",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.25.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
